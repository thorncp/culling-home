<div class="row header-row">
  <div class="col-md-8">
    <h1>Searches</h1>
  </div>

  <div class="col-md-4">
    <div class="text-right">
      <%= link_to new_search_path, class: "btn btn-success" do %>
        <%= icon "plus" %>
      <% end %>
    </div>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <% if @searches.any? %>
      <table class="table table-striped">
      <thead>
        <tr>
          <th>Description</th>
          <th>Url</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @searches.each do |search| %>
          <tr>
          <td><%= search.description %></td>
          <td><%= link_to search.url, search.url %></td>
          <td class="text-right">
            <%= link_to icon("pencil"), edit_search_path(search), class: "btn btn-xs btn-warning" %>
            <%= link_to icon("remove"), search, method: :delete, class: "btn btn-xs btn-danger", data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
    <% else %>
      <div class="jumbotron">
        <h2>Nothing here!</h2>
        <p class="lead">You should add something.</p>
        <%= link_to "Add a search", new_search_path, class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
