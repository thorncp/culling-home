<%= form_for @setting, html: { class: "form-horizontal", role: "form" } do |f| %>
  <% if @setting.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% @setting.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :value, @setting.name.humanize, class: "col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_area :value, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
